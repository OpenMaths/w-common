{
  "compilerOptions": {
    "alwaysStrict": true,
    "diagnostics": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": [
    "./typings/index.d.ts",
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./src/**/*.compiler.ts"
  ]
}